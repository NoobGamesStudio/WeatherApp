<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:WA_Front.View"
             xmlns:service="clr-namespace:WA_Front.Service"
             x:Class="WA_Front.View.MasterPage"
             x:Name="thisPage">
    <Grid ColumnDefinitions="Auto,*">
        <view:NowPage Grid.Column="0"/>
        <VerticalStackLayout Grid.Column="1" 
                             BindableLayout.ItemsSource="{Binding Views, Source={x:Reference thisPage}}"
                             BackgroundColor="Aquamarine">

        </VerticalStackLayout>
    </Grid>
</ContentPage>